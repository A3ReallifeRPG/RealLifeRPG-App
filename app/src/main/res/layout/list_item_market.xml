<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        app:cardBackgroundColor="@color/secondaryLightColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_main_market"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_serverHead">


            <ImageView
                android:id="@+id/iv_list_marketitem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_list_marketitem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/str_placeholder"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="@id/iv_list_marketitem"
                app:layout_constraintBottom_toBottomOf="@id/iv_list_marketitem"
                app:layout_constraintLeft_toRightOf="@id/iv_list_marketitem" />

            <TextView
                android:id="@+id/tv_list_marketitem_server1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin = "4dp"
                android:layout_alignParentRight="true"
                android:text="@string/str_server1"
                android:gravity="left"
                android:textColor="@color/secondaryDarkColor"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_list_marketitem_price1"/>

            <TextView
                android:id="@+id/tv_list_marketitem_server2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin = "4dp"
                android:layout_alignParentRight="true"
                android:text="@string/str_server2"
                android:gravity="left"
                android:textColor="@color/secondaryDarkColor"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_list_marketitem_price2"/>

            <TextView
                android:id="@+id/tv_list_marketitem_price1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin = "4dp"
                android:layout_alignParentRight="true"
                android:text="@string/str_placeholder"
                android:gravity="right"
                android:textColor="@color/secondaryDarkColor"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_list_marketitem" />

            <TextView
                android:id="@+id/tv_list_marketitem_price2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin = "4dp"
                android:layout_alignParentRight="true"
                android:text="@string/str_placeholder"
                android:gravity="right"
                android:textColor="@color/secondaryDarkColor"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_list_marketitem"
                app:layout_constraintTop_toBottomOf="@id/tv_list_marketitem_price1" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>