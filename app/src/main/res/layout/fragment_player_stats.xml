<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondaryColor">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_main_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />

    <ImageView
        android:id="@+id/iv_p_stats_bank"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/str_bank"
        android:scaleType="fitXY"
        android:src="@drawable/ic_bank"
        app:tint="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_p_stats_cash"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/str_cash"
        android:scaleType="fitXY"
        android:src="@drawable/ic_money"
        android:tint="@color/primaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_p_stats_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:text="@string/str_null"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_p_stats_bank"
        app:layout_constraintEnd_toStartOf="@+id/iv_p_stats_bank"
        app:layout_constraintTop_toTopOf="@+id/iv_p_stats_bank" />

    <TextView
        android:id="@+id/tv_p_stats_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:text="@string/str_null"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_p_stats_cash"
        app:layout_constraintStart_toEndOf="@+id/iv_p_stats_cash"
        app:layout_constraintTop_toTopOf="@+id/iv_p_stats_cash" />

    <TextView
        android:id="@+id/lbl_p_stats_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="@string/str_level"
        android:textColor="@color/primaryTextColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_p_stats_bank" />

    <ProgressBar
        android:id="@+id/pb_p_stats_level"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:progress="50"
        android:progressTint="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_p_stats_level" />

    <TextView
        android:id="@+id/tv_p_stats_level_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="@string/str_null"
        android:textColor="@color/primaryLightColor"
        app:layout_constraintBottom_toTopOf="@+id/pb_p_stats_level"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_p_stats_level_cur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/str_null"
        android:textColor="@color/primaryLightColor"
        app:layout_constraintBottom_toTopOf="@+id/pb_p_stats_level"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lbl_p_stats_skillpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/str_skillpoint"
        android:textColor="@color/primaryLightColor"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pb_p_stats_level" />

    <TextView
        android:id="@+id/lbl_p_stats_last_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/str_lastSeen"
        android:textColor="@color/primaryLightColor"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_p_stats_skillpoint" />

    <TextView
        android:id="@+id/tv_p_stats_skillpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/str_null"
        android:textColor="@color/primaryTextColor"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/lbl_p_stats_skillpoint"
        app:layout_constraintTop_toTopOf="@+id/lbl_p_stats_skillpoint" />

    <TextView
        android:id="@+id/tv_p_stats_last_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/str_null"
        android:textColor="@color/primaryTextColor"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/lbl_p_stats_last_seen"
        app:layout_constraintTop_toTopOf="@+id/lbl_p_stats_last_seen" />


        <ListView
            android:id="@+id/lv_fractionen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toTopOf="@+id/gl_main_market"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_p_stats_last_seen" />

</androidx.constraintlayout.widget.ConstraintLayout>